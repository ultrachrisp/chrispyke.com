{
    "name": "chrispyke.com",
    "version": "1.1.0",
    "description": "Personal blog",
    "main": "public/index.html",
    "scripts": {
        "clean": "del static/** & del public/** !public !public/.git !public/.gitignore",
        "createFolders": "mkdir -p ./static ./static/img ./static/fonts",
        "general": "cp assets/general/* static",
        "fonts": "cp assets/fonts/* static/fonts",
        "commonReasources": "npm run general && npm run fonts",
        "imagemin": "imagemin assets/img/* --out-dir=static/img",
        "build:images": "npm run imagemin",
        "build:all": "npm run clean && npm run createFolders && npm run commonReasources && npm run build:images",
        "watch:images": "onchange 'assets/img/**/*' -- npm run build:images",
        "watch:all": "npm-run-all -p watch:images"
    },
    "repository": {
        "type": "git",
        "url": "yes"
    },
    "author": "Chris Pyke",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^8.4.1",
        "cssnano": "^4.1.4",
        "del-cli": "^1.1.0",
        "imagemin-cli": "^3.0.0",
        "onchange": "^4.0.0",
        "postcss-cli": "^5.0.0",
        "npm-run-all": "^4.1.3",
        "reset-css": "^4.0.1"
    },
    "dependencies": {}
}
