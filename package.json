{
    "name": "chrispyke.com",
    "version": "1.1.0",
    "description": "Personal blog",
    "main": "public/index.html",
    "module": "public/main.js",
    "scripts": {
        "clean": "del static/** & del public/** !public !public/.git !public/.gitignore",
        "createFolders": "mkdir -p ./static ./static/svg ./static/fonts",
        "general": "cp assets/general/* static",
        "fonts": "cp assets/fonts/* static/fonts",
        "commonReasources": "npm-run-all -p general fonts",
        "imagemin": "imagemin assets/svg/* --out-dir=static/svg",
        "images:build": "npm run imagemin",
        "images:start": "onchange 'assets/svg/**/*' -- npm run images:build",
        "browserify": "browserify assets/js/src/main.js -o assets/js/main.bundle.js",
        "watchify": "watchify assets/js/src/main.js -o assets/js/main.bundle.js",
        "hugo": "Hugo server -w -D",
        "build": "npm-run-all -s clean createFolders commonReasources images:build browserify",
        "start": "npm-run-all -p images:start watchify hugo"
    },
    "repository": {
        "type": "git",
        "url": "yes"
    },
    "author": "Chris Pyke",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/preset-env": "^7.4.3",
        "autoprefixer": "^8.4.1",
        "babelify": "^10.0.0",
        "browserify": "^16.2.3",
        "cssnano": "^4.1.10",
        "del-cli": "^1.1.0",
        "imagemin-cli": "^3.0.0",
        "npm-run-all": "^4.1.3",
        "onchange": "^4.0.0",
        "postcss-cli": "^5.0.0",
        "reset-css": "^4.0.1"
    },
    "dependencies": {},
    "browserify": {
        "transform": [
            [
                "babelify",
                {
                    "presets": [
                        "@babel/preset-env"
                    ]
                }
            ]
        ]
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    }
}
