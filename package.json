{
    "name": "chrispyke.com",
    "version": "1.1.0",
    "description": "Personal blog",
    "main": "public/index.html",
    "module": "public/main.js",
    "scripts": {
        "babel": "babel --presets es2015 -w assets/js/main.js -o assets/js/main.bundle.js",
        "clean": "del static/** & del public/** !public !public/.git !public/.gitignore",
        "createFolders": "mkdir -p ./static ./static/svg ./static/fonts",
        "general": "cp assets/general/* static",
        "fonts": "cp assets/fonts/* static/fonts",
        "hugo": "hugo server -w -D",
        "commonReasources": "npm run general && npm run fonts",
        "imagemin": "imagemin assets/svg/* --out-dir=static/svg",
        
        "images:build": "npm run imagemin",
        "images:watch": "onchange 'assets/svg/**/*' -- npm run images:build",
        
        "build": "npm run clean && npm run createFolders && npm run commonReasources && npm run build:images",
        "watch": "npm-run-all -p images:watch babel hugo"
    },
    "repository": {
        "type": "git",
        "url": "yes"
    },
    "author": "Chris Pyke",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^8.4.1",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-preset-es2015": "^6.24.1",
        "cssnano": "^4.1.10",
        "del-cli": "^1.1.0",
        "imagemin-cli": "^3.0.0",
        "npm-run-all": "^4.1.3",
        "onchange": "^4.0.0",
        "postcss-cli": "^5.0.0",
        "reset-css": "^4.0.1"
    }
}
