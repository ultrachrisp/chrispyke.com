{
    "name": "chrispyke.com",
    "version": "1.1.0",
    "description": "Personal blog",
    "main": "public/index.html",
    "module": "public/main.js",
    "scripts": {
        "clean": "del static/** & del public/** !public !public/.git !public/.gitignore",
        "createFolders": "mkdir -p ./static ./static/svg ./static/fonts",
        "general": "cp assets/general/* static",
        "fonts": "cp assets/fonts/* static/fonts",
        "hugo": "hugo server -w -D",
        "commonReasources": "npm run general && npm run fonts",
        "imagemin": "imagemin assets/svg/* --out-dir=static/svg",
        "images:build": "npm run imagemin",
        "images:start": "onchange 'assets/svg/**/*' -- npm run images:build",
        "rollup:build": "babel assets/js/src -d assets/js",
        "rollup:start": "babel assets/js/src -d assets/js -w",
        "build": "npm run clean && npm run createFolders && npm run commonReasources && npm run build:images",
        "start": "npm-run-all -p images:start hugo"
    },
    "repository": {
        "type": "git",
        "url": "yes"
    },
    "author": "Chris Pyke",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/preset-env": "^7.4.3",
        "autoprefixer": "^8.4.1",
        "cssnano": "^4.1.10",
        "del-cli": "^1.1.0",
        "imagemin-cli": "^3.0.0",
        "npm-run-all": "^4.1.3",
        "onchange": "^4.0.0",
        "postcss-cli": "^5.0.0",
        "reset-css": "^4.0.1"
    },
    "dependencies": {
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "modules": false
                }
            ]
        ],
        "plugins": [
            "@babel/plugin-external-helpers",
            "@babel/plugin-proposal-class-properties",
            [
                "@babel/plugin-transform-runtime",
                {
                    "corejs": 2
                }
            ]
        ]
    }
}
