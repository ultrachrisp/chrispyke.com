{
    "name": "chrispyke.com",
    "version": "1.1.0",
    "description": "Personal blog",
    "main": "public/index.html",
    "scripts": {
        "clean": "del static/** & del public/**",
        "general": "cp src/general/* static",
        "autoprefixer": "postcss -u autoprefixer -r static/css/*",
        "scss": "node-sass --output-style compressed -o static/css src/scss",
        "imagemin": "imagemin src/images static/images",
        "serve": "browser-sync start --server --files 'static/css/*.css, static/js/*.js, **/*.html' ",
        "build:css": "npm run scss && npm run autoprefixer",
        "build:images": "npm run imagemin",
        "build:all": "npm run build:css && npm run build:images",
        "watch:css": "onchange 'src/scss/**/*.scss' -- npm run build:css",
        "watch:images": "onchange 'src/images/**/*' -- npm run build:images",
        "watch:all": "npm-run-all -p serve watch:css watch:images"
    },
    "repository": {
        "type": "git",
        "url": "yes"
    },
    "author": "Chris Pyke",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^8.4.1",
        "browser-sync": "^2.24.4",
        "del-cli": "^1.1.0",
        "imagemin-cli": "^3.0.0",
        "onchange": "^4.0.0",
        "postcss-cli": "^5.0.0",
        "node-reset-scss": "^1.0.1",
        "node-sass": "^4.9.0",
        "tern": "^0.21.0"
    },
    "dependencies": {
        "del": "^2.2.0",
        "gulp": "^3.9.1",
        "gulp-autoprefixer": "^3.1.0",
        "gulp-cache": "^0.4.2",
        "gulp-cli": "^2.0.1",
        "gulp-concat": "^2.6.0",
        "gulp-cssnano": "^2.1.1",
        "gulp-imagemin": "^2.4.0",
        "gulp-livereload": "^3.8.1",
        "gulp-notify": "^2.2.0",
        "gulp-order": "^1.1.1",
        "gulp-rename": "^1.2.2",
        "gulp-sass": "^2.2.0",
        "gulp-uglify": "^1.5.3",
        "susy": "^2.2.12"
    }
}
