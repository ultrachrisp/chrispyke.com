{
    "name": "chrispyke.com",
    "version": "1.1.0",
    "description": "Personal blog",
    "main": "public/index.html",
    "scripts": {
        "clean": "del static/** & del public/**",
        "createFolders": "mkdir -p ./static ./static/js ./static/css ./static/img ./static/fonts",
        "general": "cp src/general/* static",
        "fonts": "cp src/fonts/* static/fonts",
        "commonReasources": "npm run general && npm run fonts",
        "autoprefixer": "postcss -u autoprefixer -r static/css/*",
        "scss": "node-sass --output-style compressed -o static/css src/scss",
        "imagemin": "imagemin src/img/* --out-dir=static/img",
        "build:css": "npm run scss && npm run autoprefixer",
        "build:images": "npm run imagemin",
        "build:all": "npm run clean && npm run createFolders && npm run commonReasources && npm run build:css && npm run build:images",
        "watch:css": "onchange 'src/scss/**/*.scss' -- npm run build:css",
        "watch:images": "onchange 'src/img/**/*' -- npm run build:images",
        "watch:all": "npm-run-all -p watch:css watch:images"
    },
    "repository": {
        "type": "git",
        "url": "yes"
    },
    "author": "Chris Pyke",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^8.4.1",
        "del-cli": "^1.1.0",
        "imagemin-cli": "^3.0.0",
        "onchange": "^4.0.0",
        "postcss-cli": "^5.0.0",
        "node-sass": "^4.9.0",
        "npm-run-all": "^4.1.3",
        "tern": "^0.21.0"
    },
    "dependencies": {}
}
